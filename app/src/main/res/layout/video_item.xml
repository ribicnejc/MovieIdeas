<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5">


        <ImageView
            android:id="@+id/yt_image"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:contentDescription="@string/youtube_logo"
            android:src="@drawable/youtube_play_button" />

        <TextView
            android:id="@+id/tv_trailer_title"
            style="@style/TextViewStyle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/yt_image"
            android:layout_toRightOf="@id/yt_image"
            tools:text="@string/dummy_text_youtube" />

    </RelativeLayout>
</android.support.v7.widget.CardView>